#version 330

#include "Shaders/Uniforms/SH_FrameUniforms.si"
#include "Shaders/Uniforms/SH_TexUniforms.si"

in vec2 TexCoord;
out vec4 Output;

void main()
{
    vec3 worldPos = SampleWorldPos(TexCoord).xyz;
    float camDist = length(worldPos - CameraPosition);
    Output.r = camDist / NearFar.y;
    Output.gba = vec3(1.0);
}
