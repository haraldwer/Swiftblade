#include "Shaders/Uniforms/SH_FrameUniforms.si"
#include "Shaders/PostProcessing/SH_BloomUtility.si"

in vec2 TexCoord;
in vec2 RectCoord;
out vec4 Output;

uniform sampler2D TexBloom;
uniform vec2 SamplePixelSize;

void main()
{
    Output.rgb = BloomSampleDown(TexBloom, TexCoord, SamplePixelSize);
    Output.a = 1.0;
}