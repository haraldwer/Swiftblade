#version 330

#include "Shaders/Uniforms/SH_FrameUniforms.si"

uniform sampler2D TexFire;

in vec2 TexCoord;
out vec4 Output;

void main()
{
    vec4 fire = texture(TexFire, TexCoord);
    if (fire.a < 0.1f)
        discard;

    float light = 0.3f + fire.a * 0.2f; 
    Output.rgb = vec3(light, light, 1.0f);
    Output.a = 1.0f;
}