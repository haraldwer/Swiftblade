#include "Shaders/Uniforms/SH_FrameUniforms.si"
#include "Shaders/PostProcessing/SH_BloomUtility.si"

in vec2 TexCoord;
in vec2 RectCoord;
layout (location = 0) out vec4 Output;

uniform sampler2D TexBloom;
uniform vec2 SamplePixelSize;
uniform float LayerStrength;

void main()
{
    Output.rgb = BloomSampleUp(TexBloom, TexCoord, SamplePixelSize);
    Output.a = LayerStrength;
}